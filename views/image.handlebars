<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">{{ image.title }}</h2>
  </div>
  <div class="panel-body">
    <p>
      {{ image.description }}
    </p>
    <div class="col-md-12 text-center">
      <img src="/public/upload/{{image.filename}}" class="img-thumbnail" alt="{{image.title}}" />
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-md-8">
        <button class="btn btn-success" id="btn-like" data-id="{{ image.uniqueId }}">
          <i class="fa fa-heart"> Like</i>
        </button>
        <strong class="likes-count">{{ image.likes }}</strong>
        <i class="fa fa-eye">
          <strong>{{ image.views }}</strong>
          Posted: <em class"text-muted">{{ timeago image.timestamp}}</em>
        </i>
      </div>
    </div>
  </div>
</div>
